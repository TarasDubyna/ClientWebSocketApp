<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar" >
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blue_grey_500</item>
        <item name="colorPrimaryDark">@color/blue_grey_600</item>
        <item name="colorAccent">@color/blue_grey_500</item>
        <item name="android:navigationBarColor">@color/blue_grey_600</item>
        <item name="android:windowBackground">@color/blue_grey_400</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:textColorPrimaryInverse">@color/blue_grey_500</item>
        <item name="android:colorBackground">@color/blue_grey_300</item>

        <item name="colorButtonNormal">@color/blue_grey_200</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">17sp</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="ServerSwitch" parent="Base.Widget.AppCompat.CompoundButton.Switch">
        <item name="android:colorControlActivated">@android:color/holo_green_light</item>
        <item name="android:switchTextAppearance">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>
